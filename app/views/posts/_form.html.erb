<%= form_for post do |f| %>
    <strong><%= f.label :title %></strong>
    <%= f.text_field :title %>
    <br><br>
    <strong><%= f.label :content %></strong>
    <%= f.text_field :content %>
    <br><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    <br><br>
    <%= f.fields_for :categories, post.categories.build do |category| %>
        <strong><%= category.label :name, "New Category" %></strong>
        <%= category.text_field :name %>
    <% end %>

    <p><%= f.submit %></p>
<% end %>